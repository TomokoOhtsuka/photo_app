<% provide(:title, 'Guests') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@guest) do |f| %>
      <%= render "shared/error.messages", object: f.object %>
      
      <%= f.label :guest_password, "ゲストパスワード" %>
      <%= f.password_field :guest_password, class: "form-control" %>
      
      <%= f.submit "アカウント作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>