<% provide(:title, 'Guests') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!--モデルに紐づかないフォームなのでform_tagを使用する-->
    <%= form_tag(url: "/events/#{@event_id}/login", method: :post) do %>

      <%= label_tag :guest_password, "ゲストパスワード" %>
      <%= password_field :guest_password, class: "form-control" %>
      
      <%= submit_tag "アカウント作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>