<% provide(:title, 'Guests') %>
<div class="event-login">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>ゲストとしてログインする</h2>
      <!--モデルに紐づかないフォームなのでform_tagを使用する-->
      <%= form_tag(url: "/events/#{current_event.name}/login", method: :post) do %>

        <%= label_tag :guest_password, "ゲストパスワード" %>
        <%= password_field :event, :guest_password, class: "form-control" %>
      
        <%= submit_tag "フォトアルバムにログインする", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
