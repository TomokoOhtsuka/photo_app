<div class="event-new">
  <div class="background">
  <%= form_for(@event) do |f| %>
  <div class="row">
    <h2>新しいフォトアルバムを作成する</h2>
    <div class="col-md-4 col-md-offset-4">
      <%= render("shared/error.messages", object: f.object) %>
 　  
      <%= f.label :title, "イベント名" %>
      <%= f.text_field :title, class: "form-control" %>
      
      <%= f.label :name, "設定したいURL" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :guest_password, "ゲスト通知用パスワード" %>
      <%= f.password_field :guest_password, class: "form-control" %>
   
      <%= f.label :description, "メモ" %>
      <%= f.text_area :description, class: "form-control" %>

      <%= f.submit "フォトアルバム作成", class: "btn btn-primary" %>
    </div>    
  <% end %>
  </div>
  </div>
</div>